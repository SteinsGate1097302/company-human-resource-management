<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ltl.demo.mapper.AdminMapper">


    <select id="selectCntByUserName" parameterType="com.ltl.demo.vo.AdminVo" resultType="java.lang.Integer">
        select count(*) from admin
            where username = #{username}
            <if test="id != null">
                and id != #{id}
            </if>
    </select>
</mapper>
